{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
        }
    },
    "include": [
        "src/**/*", "src/@custom_types"
    ]
}